<div class='row'>

	<div class= 'col-md-6' >
		<h1>Por Hacer</h1>
		<% @todos.each do |todo| %>
			<div class="container" style='margin-top: 20px'>
				<% if !todo.completed %>
					<div class="card card-body bg-light" >
						<div style='text-align: center; margin: 10px'> <%= todo.description  %> </div>
						<%= link_to 'Completed', todo_complete_path(todo), { "class" => "btn btn-success"} %>
						<%= link_to 'Edit', todo_edit_path(todo), { "class" => "btn btn-secondary"} %>
						<%= link_to 'Destroy', todo, { "class" => "btn btn-danger", "method" => "delete" } %>
					</div>
				<% end %>
			</div>
		<% end %>
	</div>

	<div class= 'col-md-6'>
		<h1>Completados</h1>
		<% @todos.each do |todo| %>
			<div class="container" style='margin-top: 20px'>
				<% if todo.completed %>
					<div class="card card-body bg-light" >
						<div style='text-align: center; margin: 10px'> <%= todo.description  %> </div>
						<%= link_to 'Completed', todo_complete_path(todo), { "class" => "btn btn-success"} %>
						<%= link_to 'Edit', todo_edit_path(todo), { "class" => "btn btn-secondary"} %>
						<%= link_to 'Destroy', todo, { "class" => "btn btn-danger", "method" => "delete" } %>
					</div>
				<% end %>
			</div>
		<% end %>	
	</div>

</div>